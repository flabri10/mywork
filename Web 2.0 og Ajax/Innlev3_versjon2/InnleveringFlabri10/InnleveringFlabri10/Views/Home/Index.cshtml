@{
    ViewBag.Title = "Filmanmeldelser";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Filmanmeldelser</h1>
            </hgroup>
        </div>
    </section>
}
<div id="divContainer">    
    <section id="secSkjema">
        <h2>Legg til anmeldelse</h2>
        <table id="skjemaTabell">
            <tr>
                <td><input type="text" id="txtId" placeholder="Id"/></td>
            </tr>
            <tr>
                <td><input type="text" id="txtEpost" placeholder="Epost"/></td>
            </tr>
            <tr>
                <td><input type="text" id="txtTittel" placeholder="Filmtittel"/></td>
            </tr>
            <tr>
                <td><input type="text" id="txtAnmeldelse" placeholder="Anmeldelse"/></td>
            </tr>
            <tr>
                <td><label>Vurder</label> 
                <label for = "1">1<input type = "radio" 
                    name = "rblVurder"
                    id = "1"
                    value = "1" /></label>
                    
                <label for = "2">2<input type = "radio" 
                    name = "rblVurder"
                    id = "2"
                    value = "2" /></label>
                    
               <label for = "3">3<input type = "radio" 
                    name = "rblVurder"
                    id = "3"
                    value = "3" /></label>
          
                <label for = "4">4<input type = "radio" 
                    name = "rblVurder"
                    id = "4"
                    value = "4" /></label>
                    
                    <label for = "5">5<input type = "radio" 
                    name = "rblVurder"
                    id = "5"
                    value = "5" /></label></td> 
            </tr>
        </table>
        <input type="button" onclick="OppdaterListe()" value="Legg til"/>
    </section>
    <hr/>
    <section id="sectSoek">
        <label for="Soek">Søk
            <input type="text" name="txtSoekEpost" id="txtSoekEpost" value="Søk" placeholder="Skriv inn epost" />
        </label>

    </section>
    <section id="secFilmliste">
        <h2>Filmliste</h2>
        <input type="button" onclick="GetFilmanmeldelser()" value="Hent filmanmeldelseliste" />
        <label id="lblMelding"></label>
        <table id="anmeldelseTabell"></table>
    </section>
</div>



